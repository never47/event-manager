<AnchorPane fx:id="AnchorPane" prefHeight="400.0" prefWidth="550.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scorerecordingmanager.Controllers.PlayersDoneScreenController">
    <AnchorPane fx:id="innerAnchorPane" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <children>
            <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <children>
               <HBox>
                  <children>
                     <Button mnemonicParsing="false" onAction="#goBack" prefHeight="27.0" prefWidth="90.0" styleClass="backButton" text="&lt; Back" />
                     <Button mnemonicParsing="false" onAction="#signOut" styleClass="customButton" text="Sign out">
                        <HBox.margin>
                           <Insets left="347.0" top="5.0" />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
                    <HBox fx:id="hBox" alignment="CENTER">
                        <children>
                     <Label fx:id="teamName" alignment="CENTER" prefHeight="47.0" prefWidth="198.0" styleClass="text" text="Team Name">
                        <font>
                           <Font name="System Bold" size="24.0" />
                        </font>
                     </Label>
                        </children>
                        <VBox.margin>
                            <Insets left="20.0" right="20.0" top="5.0" />
                        </VBox.margin>
                    </HBox>
                    <ScrollPane prefHeight="240.0" prefWidth="486.0">
                        <content>
                            <AnchorPane fx:id="playersField" minHeight="0.0" minWidth="0.0" />
                        </content>
                        <VBox.margin>
                            <Insets left="10.0" right="10.0" top="10.0" />
                        </VBox.margin>
                    </ScrollPane>
                </children>
            </VBox>
        </children>
    </AnchorPane>
</AnchorPane>
