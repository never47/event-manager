<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="550.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scorerecordingmanager.Controllers.HomeScreenController">
    <AnchorPane fx:id="innerAnchorPane" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <children>
            <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <children>
                    <VBox fx:id="vBox">
                        <children>
                            <Label fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="45.0" prefWidth="507.0" text="Score Recording Manager" textOverrun="CLIP">
                                <font>
                                    <Font name="System Bold" size="30.0" />
                                </font>
                                <opaqueInsets>
                                    <Insets />
                                </opaqueInsets>
                                <VBox.margin>
                                    <Insets />
                                </VBox.margin>
                            </Label>
                        </children>
                        <padding>
                            <Insets bottom="15.0" />
                        </padding>
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <VBox.margin>
                     <Insets left="10.0" right="10.0" top="10.0" />
                  </VBox.margin>
                    </VBox>
                    <HBox>
                        <VBox.margin>
                            <Insets left="60.0" top="40.0" />
                        </VBox.margin>
                        <children>
                     <Button fx:id="createEventButton" mnemonicParsing="false" onAction="#createEvent" styleClass="customButton" text="+">
                        <font>
                           <Font name="System Bold" size="24.0" />
                        </font>
                     </Button>
                              <Label alignment="TOP_LEFT" text="Create Event">
                                  <font>
                                      <Font name="System Bold" size="36.0" />
                                  </font>
                        <HBox.margin>
                           <Insets left="30.0" />
                        </HBox.margin>
                              </Label>
                        </children>
                    </HBox>
                      <Button alignment="CENTER" onAction="#showCreatedEvents" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 5, 0, 0, 1);" styleClass="customButton" text="Events Created">
                          <font>
                              <Font name="System Bold" size="24.0" />
                          </font>
                  <VBox.margin>
                     <Insets left="40.0" top="30.0" />
                  </VBox.margin>
                      </Button>
               <HBox alignment="CENTER_RIGHT">
                  <children>
                     <Label text="How to use">
                        <font>
                           <Font size="14.0" />
                        </font>
                        <HBox.margin>
                           <Insets right="5.0" />
                        </HBox.margin>
                     </Label>
                     <Button mnemonicParsing="false" onAction="#howToUse" styleClass="faqButton" text="?">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </Button>
                  </children>
                  <VBox.margin>
                     <Insets right="10.0" top="50.0" />
                  </VBox.margin>
               </HBox>
                </children>
            </VBox>
        </children>
    </AnchorPane>
</AnchorPane>
